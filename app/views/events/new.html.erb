<h1>New Event</h1>

<%= form_for @event do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :location %>
  <%= f.text_field :location %>
  <br />
  <%= f.label :date %>
  <%= f.datetime_select :date %>
  <br />
  <%= f.submit "Create event" %>
<% end %>
